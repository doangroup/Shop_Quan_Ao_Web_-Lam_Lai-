@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="container__account">
        <div class="col wide l-6">
            <div class="contianer__account-wrap">

                <p class="container__account-heading">ĐĂNG NHẬP</p>
                <form action="#" class="container__account-sign-up-form-control" method="post">
                    <div class="row">
                        <div class="col wide l-12">
                            <input type="text" name="Username" required placeholder="Số Điện Thoại"
                                   class="container__account-form">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col wide l-12">
                            <input type="password" name="Password" required placeholder="Mật Khẩu"
                                   class="container__account-form">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col wide l-12">
                            <input type="submit" class="btn btn-sign-up" value="Đăng Nhập">
                        </div>
                    </div>



                </form>
            </div>
        </div>
        <div class="col wide l-6">
            <p class="container__account-heading">ĐĂNG KÝ THÀNH VIÊN MỚI</p>
            <form action="/KhachHang/DangKy" method="post" class="container__account-sign-up-form-control">
                <div class="row">
                    <div class="col wide l-12">
                        <input type="text" name="Name" required placeholder="Họ Và Tên"
                               class="container__account-form">
                    </div>
                </div>
                <div class="row">
                    <div class="col wide l-12">
                        <input type="text" name="DiaChi" required placeholder="Địa Chỉ"
                               class="container__account-form">
                    </div>
                </div>
                <div class="row">
                    <div class="col wide l-12">
                        <input type="text" name="Phone" required placeholder="Số Điện Thoại"
                               class="container__account-form">
                    </div>
                </div>
                <div class="row">
                    <div class="col wide l-12">
                        <input type="password" name="Password" required placeholder="Mật Khẩu"
                               class="container__account-form">
                    </div>
                </div>
                <div class="row">
                    <div class="col wide l-12">
                        <input type="submit" class="btn btn-sign-up" value="Đăng Ký">
                    </div>
                </div>



            </form>

        </div>

    </div>
</div>
<div class="row">
    <div class="col wide l-12">
        <div class="container__contact">
            <i class="container__contact-icon fas fa-phone-square-alt"></i>
            <p class="container__contact-heading">Hỗ trợ / Mua hàng: <span>0933 800 190</span></p>
        </div>
    </div>
</div>
